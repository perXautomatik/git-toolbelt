#!/bin/sh
set -e

usage () {
    echo "usage: git sha <object>" >&2
}

if [ $# -eq 1 ]; then
    object=$1
else
    usage
    exit 2
fi

set +e
output=$(git rev-parse "$object" 2>/dev/null)
status=$?
set -e
if [ $status -ne 0 ]; then
    echo "Invalid object: '$object'" >&2
    exit 1
else
    echo "$output"
    exit 0
fi
